<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dimine.commodity.dao.Dz_commodity_buyingDao" >
	<!-- Result Map-->
	<resultMap id="BaseResultMap" type="com.dimine.commodity.entity.Dz_commodity_buyingEntity" >
		<result column="id" property="id"/>
		<result column="activity_name" property="activity_name"/>
		<result column="start_time" property="start_time"/>
		<result column="end_time" property="end_time"/>
		<result column="is_start" property="is_start"/>
		<result column="create_time" property="create_time"/>
		<result column="create_by" property="create_by"/>
		<result column="update_time" property="update_time"/>
		<result column="update_by" property="update_by"/>
	</resultMap>
		   
	<!-- dz_commodity_buying table all fields -->
	<sql id="Base_Column_List" >
		id, 
		activity_name, 
		start_time, 
		end_time, 
		is_start, 
		create_time, 
		create_by, 
		update_time, 
		update_by
	</sql>	   
	   
	<!-- 查询条件 -->
	<sql id="Base_Where">
		WHERE 1=1
		<trim suffixOverrides="," >
			<if test="param != null and param != ''" >
				and 
			</if>
			<if test="query != null and query != ''" >
				${query}
			</if>
		</trim>
	</sql>

	<!-- 查询商品抢购管理表信息列表 -->
	<select id="selectByList" resultMap="BaseResultMap" parameterType="Object">
		SELECT
		<include refid="Base_Column_List"/>
		FROM  dz_commodity_buying 
		<include refid="Base_Where"/>
		<if test="pager.orderCondition != null and pager.orderCondition != ''" >
		${pager.orderCondition}
		</if>
		<if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
		${pager.mysqlQueryCondition}
		</if>
	</select>
	
	<!-- 查询商品抢购管理表信息列表总数-->
	<select id="selectByCount" resultType="java.lang.Integer" parameterType="Object">
		SELECT count(1) FROM dz_commodity_buying 
		<include refid="Base_Where"/>
	</select>
	
	<!-- 根据id查询 商品抢购管理表信息 -->
	<select id="selectById" resultMap="BaseResultMap" parameterType="Object">
		SELECT <include refid="Base_Column_List" /> 
		FROM dz_commodity_buying 
		WHERE 
		id = #{id} 
	</select>

	<!-- 插入记录 -->
	<insert id="insert" parameterType="Object" >
		INSERT INTO dz_commodity_buying(
		id, 
		activity_name, 
		start_time, 
		end_time, 
		is_start, 
		create_time, 
		create_by, 
		update_time, 
		update_by
		)
		VALUES(		
		#{id}, 
		#{activity_name}, 
		#{start_time}, 
		#{end_time}, 
		#{is_start}, 
		#{create_time}, 
		#{create_by}, 
		#{update_time}, 
		#{update_by}
		)
	</insert>
	<!-- 根据id，修改记录-->  
	<update id="update" parameterType="Object" >
		UPDATE dz_commodity_buying 
		SET 		
		id = #{id}, 
		activity_name = #{activity_name}, 
		start_time = #{start_time}, 
		end_time = #{end_time}, 
		is_start = #{is_start}, 
		create_time = #{create_time}, 
		create_by = #{create_by}, 
		update_time = #{update_time}, 
		update_by = #{update_by}
		WHERE 
		id = #{id} 		
	</update>	
	<!-- 删除记录 -->
	<delete id="delete" parameterType="Object">
		DELETE FROM dz_commodity_buying		
		WHERE 
		id = #{id} 		
	</delete>
	
</mapper>   